<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:paddingBottom="0dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/bottommenudashboard"
            android:layout_width="52dp"
            android:layout_height="47dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/bottommenudashboard"
            android:onClick="openDashboard"
            />
        <ImageButton
            android:id="@+id/bottommenusetting"
            android:layout_width="52dp"
            android:layout_height="47dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/bottommenusetting"
            android:onClick="openSetting"
            />
        <ImageButton
            android:id="@+id/bottommenuaccount"
            android:layout_width="52dp"
            android:layout_height="47dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/bottommenuaccount"
            android:onClick="openAccount"
            />
        <ImageButton
            android:id="@+id/bottommenuevent"
            android:layout_width="52dp"
            android:layout_height="47dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/bottommenueventclick"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal"
        android:background="@color/topNaviBar"
        android:id="@+id/linearLayout2"
        android:paddingTop="0dp"
        android:textAlignment="center">


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="47dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Event"
            android:id="@+id/topNaviBar"
            android:paddingTop="0dp"
            android:textColor="@color/topNaviBarTitleColor"
            android:gravity="center"
            />
    </LinearLayout>


</RelativeLayout>